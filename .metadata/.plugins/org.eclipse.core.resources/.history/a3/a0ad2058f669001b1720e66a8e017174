package aptitude;

public class triangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int k=0;
		for(int i=0;i<=6;++i) {
			for(int j=0;j<i-1;++j)
			{
				while ( k !=2*i-1) {
					System.out.println("*");
					++k;
				}
				System.out.print(" ");
			}
			System.out.println();
		}

	}

}
